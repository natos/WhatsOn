extends layout

block styles
	link(href="/assets/css/settings.css", rel="stylesheet")

block scripts
	script(data-load="controllers/settings")

block content
	#settings
		form
			h1 Settings
			
			h2 Personal
			ul
				li
					input(type="checkbox") 
					label Post my actions into my facebook wall
				li
					input(type="checkbox") 
					label Keep track of my favorites things

			h2 Social
			ul

				li
					i.icon-facebook-sign
					button
						i.icon-remove-sign
						b.label Disconnect from Facebook
				li
					i.icon-twitter-sign
					button
						i.icon-ok-sign
						b.label Link your Twitter account
				li
					input(type="checkbox") 
					label Post my actions into my Facebook Wall
				li
					input(type="checkbox") 
					label Post my actions into my Twitter Stream


			h4 Which actions should we publish to your facebook timeline?
			ul

				li
					input(type="checkbox") 
					label When I add a new Favorite
				li
					input(type="checkbox") 
					label When I record something
				li
					input(type="checkbox") 
					label When I rate something

			hr

			
			h2 Manage your UPC credentials
			p So you can book events and watch it later on your TV at home.
			ul
				li
					b.label oriontestuser1
					i.icon-remove-sign
			
			form
				button
					i.icon-plus-sign
					b.label Add a new account