ul.show
	each event in normalizedEvents
		li.programme
			img.programme-bg(src="#{event.programme.imageUrl}")
			div.programme-details
				h1
					a(href="/event/#{event.id}") #{event.programme.title}

				button.btn.primary
					i.icon-time
					b.label #{__i('Record')}
				button.btn.primary.skin
					i.icon-play-circle
					b.label #{__i('Play')}
				p
					| #{event.prettyStartTime} 
					| on
					a(href="/channel/#{event.channel.id}") #{event.channel.name} 
