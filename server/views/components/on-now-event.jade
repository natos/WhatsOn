li
	a.channel-row(href="/programme/#{event.programme.id}")
		article.event.now
			div.event-time-box
				time.event-starttime #{event.startTimeString}
			header.event-header
				div.progressbar(style="width:#{event.percentageComplete}%")
				h1.event-title #{event.programme.title}
			aside.event-channel(style="background-image: url(http://www.upc.nl#{event.channel.logoImg});") on #{event.channel.name}