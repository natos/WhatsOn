extends layout

block styles
	link(href="/assets/css/channelpage.css", rel="stylesheet")
	link(href="/assets/css/channel-event-list.css", rel="stylesheet")

block content
	.channelpage
		header.hd
			.logo
				img(src="http://www.upc.nl#{data.logoIMG}")
			.like
				.fb-like(data-href="/channel/#{data.id}", data-send="false", data-layout="box_count", data-width="80", data-show-faces="true")
			h1 #{title}
			p #{data.description}

		.bd
			if data
				ul.channel-event-list
					each event in data.events
						- var startDate = Date.parse('#{event.startDateTime}');
						- var endDate = new Date(Date.parse('#{event.endDateTime}'));
						li.programme
							a.programme-link(href="/programme/#{event.programme.id}")
								.time #{event.timeRange}
								h3.title #{event.programme.title}
								p.desc #{event.programme.shortDescription}