include layout

section#content

	a#top

	#grid-container
		.back-grid

	#time-bar
		ol
			each hour, i in timeFrame
				li
					span

	#time-controls
		.move-top
			span.icon
		.move-right
			span.icon
		.move-bottom
			span.icon
		.move-left
			span.icon

	#channels-bar
		ul
			each channel in data
				li
					.picture
						img(title="#{channel.name}", src="http://www.upc.nl#{channel.logoIMG}")
					.fav
						input(id="#{channel.name}", type="checkbox")
						label(for="#{channel.name}") favorite
		

