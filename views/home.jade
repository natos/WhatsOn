include layout

section#content

	#topbookings
		ul.show
			each event in topbookings
				li.programme
					.channel
						a(href="/channel/#{event.channel.id}.html") #{event.channel.name}
					h1
						a(href="/programme/#{event.programme.id}.html") #{event.programme.title}
					p
						| #{event.prettyDate}, 
						| #{ new Date(event.startDateTime).getHours() }hs
						button #{__i('Record')}

	#channels
		ul.mosaic
			each channel in channels
				li.channel
					a(href="/channel/#{channel.id}.html")
						img(id="#{channel.id}", src="http://www.upc.nl#{channel.logoIMG}", title="(#{channel.position}) #{channel.name}", alt="#{channel.description}")