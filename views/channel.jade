include layout

section#content
	header
		h1 #{title}
		p #{data.position} #{data.broadcastFormat}
		p #{data.description}
	if data
		p Events
		ul#events
			each event in data.events
				li
					h3 
						a(href="/programme/#{event.programme.id}.html") #{event.programme.title}
					span #{event.prettyDate}
					p #{event.programme.shortDescription}

			
